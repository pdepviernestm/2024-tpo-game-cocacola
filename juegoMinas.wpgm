    game.boardGround("fondoBlanco.jpg")

    game.addVisual(bandera)
    game.addVisual(bomba)
    game.addVisualCharacter(pepita)

    /*keyboard.right().onPressDo({
        pepita.position(pepita.position().right(1))
    })
    keyboard.left().onPressDo({
        pepita.position(pepita.position().left(1))
    })
    keyboard.up().onPressDo({
        pepita.position(pepita.position().up(1))
    })
    keyboard.down().onPressDo({
        pepita.position(pepita.position().down(1))
    })*/

    game.onCollideDo(pepita, {otroObjeto =>
        if(otroObjeto.reaccionColision() == 2)  
        {
            game.say(pepita,"gan√©")
            game.schedule(3000, {game.stop()})
        }
        else if(otroObjeto.reaccionColision() == 3)
        {
            game.say(pepita,"perdi")
            game.schedule(3000, {game.stop()})
        }
    })

    game.start()
